<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/productos.css">
</head>

<body>
    <div class="container">

        <%- include('../partials/header') %>
        <main>
            <aside class="aside">
                <form action="../products/filtro" method="POST" class="formfiltro">
                <%- include('../partials/filtroListaProductos') %>
                </form>
                <button class="botonFiltro" id="verFiltros">Ver Filtros</button>
            </aside>
            <section class="producto"  >
                <% for ( var i =0; i < productos.length; i++){ %>
                    
                    <div class="calzado" onclick="javascript:location.href='/products/<%= productos[i].id %>'">
                        <p class="titulo"><%=productos[i].nombre%></p>
                        <div class="imagen">
                        <img src="/img/products/<%= productos[i].imagenes[0].path %>" alt="<%= productos[i].imagenes[0].nombre %>">
                    </div>
                        <p class="precio">$ <%= toThousand(productos[i].precio) %></p>
                        <%if(productos[i].descuento!=0) {%> 
                        <p class="oferta">(<%=productos[i].descuento%> % OFF)</p>
                        <%}%>
                    </div>
                    
                <%}%>
                
                <div class="arrows">

                    <% if ( accesorio==0 ){ %>   
                        <% if ( page > 1 ){ %>   
                            <a href="/products/?page=<%=page -2 %>" class="btn-arrow btn-arrow-left" title="Previous">Previous</a>
                            <% }else{ %>
                                <a href="/products/?page=<%= page == 0 ? page : page-1 %>" class="btn-arrow btn-arrow-left" title="Previous" style="opacity: 0;">Previous</a>
                                <%}%>
                            <% if ((contarProductos/10) > (page) && contarProductos>1 && (contarProductos/10) > 1){ %>
                            <a href="/products/?page=<%= page > 0 ? page : page+1 %>" class="btn-arrow btn-arrow-right" title="Next" >Next</a></div>
                            <% }else{ %>
                                <a href="/products/?page=<%= page == 0 ? page : page-1%>" class="btn-arrow btn-arrow-right" title="Next" style="opacity: 0;">Next</a></div>
                                <%}%>
                                <%}else if (accesorio==2){%>
                                    <% if ( page > 1 ){ %>   
                                        <a href="/products/ofertas/?page=<%=page -2 %>" class="btn-arrow btn-arrow-left" title="Previous">Previous</a>
                                        <% }else{ %>
                                            <a href="/products/ofertas/?page=<%= page == 0 ? page : page-1 %>" class="btn-arrow btn-arrow-left" title="Previous" style="opacity: 0;">Previous</a>
                                            <%}%>
                                        <% if (( Number(contarProductos) / 10) > (page) && contarProductos/10 >1){ %>
                                        <a href="/products/ofertas/?page=<%=page > 0 ? page : page+1 %>" class="btn-arrow btn-arrow-right" title="Next" >Next</a></div>
                                        <% }else{ %>
                                            <a href="/products/ofertas/?page=<%= page == 0 ? page : page-1%>" class="btn-arrow btn-arrow-right" title="Next" style="opacity: 0;">Next</a></div>
                                            <%}%>
                                              
                    <%}else{%>
                        <% if ( page > 1 ){ %>   
                            <a href="/products/accesorios/?page=<%=page -2 %>" class="btn-arrow btn-arrow-left" title="Previous">Previous</a>
                            <% }else{ %>
                                <a href="/products/accesorios/?page=<%= page == 0 ? page : page-1 %>" class="btn-arrow btn-arrow-left" title="Previous" style="opacity: 0;">Previous</a>
                                <%}%>
                            <% if ((contarProductos/10) > (page) && contarProductos>1){ %>
                            <a href="/products/accesorios/?page=<%=page > 0 ? page : page+1 %>" class="btn-arrow btn-arrow-right" title="Next" >Next</a></div>
                            <% }else{ %>
                                <a href="/products/accesorios/?page=<%= page == 0 ? page : page-1%>" class="btn-arrow btn-arrow-right" title="Next" style="opacity: 0;">Next</a></div>
                                <%}%>
                                <%}%>    
            </section>


        </main>

        <%- include('../partials/footer') %>

    </div>
    <script src="/js/productos.js"></script>
</body>
</html>