<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/productos.css">
</head>

<body>
    <div class="container">

        <%- include('../partials/header_admin') %>

        <main>
            <aside class="aside">
                
                <a href="/admin/products/create"><button class="buttonAgregar">Agregar Producto</button></a>
                <br>
                <form action="../admin/products" method="POST" class="formfiltro">
                <%- include('../partials/filtroListaProductos') %>
                </form>
            </aside>
            <section class="producto">
                <% for ( var i =0; i < productos.length; i++){ %>
                    <div class="calzado" onclick="javascript:location.href='../products/<%= productos[i].id %>'">
                        <p class="titulo"><%= productos[i].nombre %></p> 
                        <img src="/img/products/<%= productos[i].imagenes[0].path %>" alt="">
                        <p class="precio">$ <%= toThousand(productos[i].precio) %></p> 
                        <p class="oferta">(<%= productos[i].descuento %> % OFF)</p>
                        <p class="envio">Envio</p> 
                        <a href="/admin/products/<%= productos[i].id %>/edit"><button class="buttonEdit">Editar</button></a><a href="/admin/products/delete/<%= productos[i].id %>">
                        <button class="buttonDelete">Borrar</button></a>
                    </div>
                    <% } %>
            </section>
            
        </main>

        <%- include('../partials/footer') %>

    </div>
</body>
</html>