<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href='/stylesheets/__register.css'/>
    <link rel='stylesheet' href='/stylesheets/header2.css' />

</head>
<body>
    <div class="container">
        <%- include('../partials/header') %>
        <main>
            <div class="subheader">
                <p><a href="#">Inicio</a> > Iniciar sesión</p>
            </div>
            <% if ( mensaje != 'nada') { %>
                <ul>
                    <% for ( let m=0; m<mensaje.length; m++) { %>
                    <li><%= mensaje[m].msg %></li>
                    <% } %>
                </ul>
            <% } %>
            <div class="inputsContainer">
                <form class="auxiliarInputsContainer" action="/users/login" method="post">
                    <div class="emailInputContainer">
                        <label for="email">EMAIL</label>
                        <input type="email" name="email" id="email">
                        <ul style="font-size: small; color: red;" id="emailError"></ul>
                    </div>
                    <div class="passwordInputContainer">
                        <label for="password">CONTRASEÑA</label>
                        <input type="password" name="password" id="password">
                        <ul style="font-size: small; color: red;" id="passwordError"></ul>
                        <a class="forgotPassword" href="#">¿Olvidaste tu contraseña?</a>
                    </div>
                    <button id="entrar" type="submit">INCIAR SESIÓN</button>
                </form>
            </div>
            <%- include('../partials/footer') %>
        </main>
        
    </div>
    <script src="/js/login.js"></script>
</body>
</html>